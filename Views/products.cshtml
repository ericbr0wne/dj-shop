@page
@using dj_shop.Models
@using System.Net.Http.Json
@addTagHelper *, Umbraco.Core

@{
    Layout = "productPage.cshtml"; // Adjust to your layout file
}

<h2 class="page-title">Our Products</h2>

<!-- Container for the product list -->
<div id="product-list" class="product-container"></div>

<style>
    /* Page title styling */
    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    /* Basic Styling for the product list */
    .product-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
        padding: 0 20px;
    }

    /* Individual product card styling */
    .product-card {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        text-align: center;
    }

    /* Hover effect for product card */
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .product-card img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .product-card h3 {
        font-size: 1.75rem;
        color: #333;
        margin-top: 15px;
        margin-bottom: 10px;
    }

    .product-card p {
        color: #555;
        font-size: 1rem;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .product-card .price {
        font-weight: bold;
        color: #2d9cdb;
        font-size: 1.2rem;
        margin-top: 10px;
    }

    /* Button styling (if you add a button later) */
    .product-card .btn {
        margin-top: 15px;
        padding: 10px 15px;
        background-color: #2d9cdb;
        color: white;
        text-transform: uppercase;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .product-card .btn:hover {
        background-color: #1f6f9d;
    }

    /* Loading text or no products message */
    #loading-message {
        text-align: center;
        font-size: 1.2rem;
        color: #999;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        fetch('/api/products')  // Adjust this URL to match your API endpoint
            .then(response => response.json())
            .then(data => {
                let productList = document.getElementById('product-list');
                let loadingMessage = document.getElementById('loading-message');
                
                // If no products
                if (data.length === 0) {
                    productList.innerHTML = '<p>No products available at the moment.</p>';
                    return;
                }
                
                // Remove loading message
                loadingMessage.style.display = 'none';

                // Loop through products and create product cards
                data.forEach(product => {
                    let productDiv = document.createElement('div');
                    productDiv.classList.add('product-card'); // Add class for styling

                    productDiv.innerHTML = `
                        <img src="${product.imageUrl}" alt="${product.productName}">
                        <h3>${product.productName}</h3>
                        <p>${product.description}</p>
                        <p class="price">$${product.price}</p>
                        <button class="btn">Buy Now</button>
                    `;
                    productList.appendChild(productDiv);
                });
            })
            .catch(error => {
                console.error('Error fetching products:', error);
                document.getElementById('product-list').innerHTML = '<p>Sorry, something went wrong. Please try again later.</p>';
            });
    });
</script>

<!-- Loading message while products are being fetched -->
<div id="loading-message" style="text-align:center;">
    <p>Loading products...</p>
</div>
